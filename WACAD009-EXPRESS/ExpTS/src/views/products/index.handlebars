<div class="d-flex justify-content-between align-items-center">
    <h1>Lista de produtos</h1>
    
    <a href="/products/create">
        <h1><i class="bi bi-plus-square"></i></h1>
    </a>
<!-- index page -->
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Preço</th>
            <th scope="col">Estoque</th>
            <th scope="col" class="text-end">Opções</th>
        </tr>
    </thead>

    <tbody>
        {{#each products}}
        <tr>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{stock}}</td>
            <td class="text-end">
                <a href="/products/{{id}}"><i class="bi bi-eye-fill"></i></a>
                <a href="/products/update/{{id}}"><i class="bi bi-pencil"></i></a>
                <a href="/products/delete/{{id}}"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
   
</table>